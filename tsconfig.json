{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "preserveSymlinks": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/components/ui*": ["./components/ui/*"],
      "@/components/layout*": ["./components/layout/*"],
      "@/components/layout/header*": ["./components/layout/header/*"],
      "@/server/*": ["./server/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/fonts": ["./app/fonts"],
      "@/content": ["./content/*"],
      "contentlayer/generated": ["./.contentlayer/generated"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/*.d.ts",
    "types/*.ts",
    "lib/fetcher.js",
    ".contentlayer/generated",
    "lib/rendercanvas.js",
    "lib/spotify.ts",
    "decs.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}